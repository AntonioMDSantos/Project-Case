@using Back.Domain.Entities;
@model List<Back.Domain.Entities.ProductOrder>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<title>PDF Order</title>
<div class="title ">
    <h2>Relação de Clientes</h2>
</div>
<table class="table">

    <tr class="container">
        <th>Id</th>
        <th>Product ID</th>
        <th>Quantidade</th>
        <th>Preço</th>
        <th>Ordem</th>
    </tr>

    @foreach (var item in @Model)
    {
        <tr>
            <th>@item.Id</th>
            <th>@item.ProductId</th>
            <th>@item.Quantity</th>
            <th>@item.Price</th>
            <th>@item.OrderType</th>
        </tr>
    }
</table>

<style>
    .table th {
        display: flex;
    }

    .title h2 {
        text-align: center;
        font-size: 30px;
    }

    .container {
        background-color: #87CEEB;
    }
</style>