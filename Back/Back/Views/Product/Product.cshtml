@using Back.Domain.Entities;
@model List<Back.Domain.Entities.Product>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<title>PDF Produtos</title>
<div class="title ">
    <h2>Relação de Clientes</h2>
</div>
<table class="table">

    <tr class="container">
        <th>Id</th>
        <th>Nome</th>
        <th>Quantidade</th>
        <th>Image</th>
    </tr>

    @foreach (var item in @Model)
    {
        <tr>
            <th>@item.Id</th>
            <th>@item.ProductName</th>
            <th>@item.ProductQtd</th>
            <th><img src="https://localhost:7265/@item.ProductImage" style="width: 50px; height: 50px;">
            </th>
        </tr>
    }
</table>

<style>
    .table th {
        display: flex;
    }

    .title h2 {
        text-align: center;
        font-size: 30px;
    }

    .container {
        background-color: #87CEEB;
    }
</style>